@model ICollection<AuthenticationClientData>

@if (Model.Count != 0) {
  using (Html.BeginForm("ExternalLogin", "Account", new { ReturnUrl = ViewBag.ReturnUrl })) {
  @Html.AntiForgeryToken()
  <fieldset id="socialLoginList">
    <legend>Log in using another service</legend>
    <p>
      @foreach (AuthenticationClientData p in Model) {
        <button type="submit" name="provider" class="btn" value="@p.AuthenticationClient.ProviderName" title="Log in using your @p.DisplayName account">
          <i class="icon-@((@p.AuthenticationClient.ProviderName == "google") ? "google-plus" : @p.AuthenticationClient.ProviderName) "></i> @p.DisplayName
        </button>
      }
    </p>
  </fieldset>
  }
}
